{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": false
  },
  "include": ["component", "config", "screen", "src", "util"],
  "exclude": ["dist", "node_modules"]
}
